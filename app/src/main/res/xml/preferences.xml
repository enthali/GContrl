<PreferenceScreen
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    >

    <PreferenceCategory android:title="MQTT Server Connection">

        <EditTextPreference
            app:key="uri"
            app:defaultValue="mqtt.drachen-fels.de"
            app:title="MQTT server URI"
            app:useSimpleSummaryProvider="true" />

        <EditTextPreference
            app:key="port"
            app:defaultValue="8883"
            app:title="MQTT server Port"
            app:useSimpleSummaryProvider="true" />

        <SwitchPreferenceCompat
            app:key="ssl"
            app:defaultValue="true"
            app:title="Use transport layer encryption (SSL)" />
    </PreferenceCategory>

    <PreferenceCategory android:title="User Settings">

        <EditTextPreference
            app:key="clientId"
            app:defaultValue="AndroidTraveler"
            app:title="Device ID"
            app:useSimpleSummaryProvider="true" />

        <EditTextPreference
            app:key="user"
            app:defaultValue="traveler"
            app:title="User"
            app:useSimpleSummaryProvider="true" />

        <EditTextPreference
            app:key="password"
            app:title="Password"
            app:defaultValue="traveler"
            app:persistent="true"
            app:useSimpleSummaryProvider="true" />

    </PreferenceCategory>
    <PreferenceCategory android:title="Geo Location Servicess">

        <SwitchPreference
            android:defaultValue="false"
            android:key="enable_location_features"
            android:title="enable_loc_features" />
    </PreferenceCategory>

</PreferenceScreen>
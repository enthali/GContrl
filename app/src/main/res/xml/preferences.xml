<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <PreferenceCategory app:title="MQTT Server Connection">

        <EditTextPreference
            app:key="url"
            app:title="MQTT server URL"
            app:useSimpleSummaryProvider="true" />

        <EditTextPreference
            app:key="port"
            app:title="MQTT server Port"
            app:useSimpleSummaryProvider="true" />

        <SwitchPreferenceCompat
            app:key="ssl"
            app:title="Use transport layer encryption (SSL)" />
    </PreferenceCategory>

    <PreferenceCategory app:title="User Settings">

        <EditTextPreference
            app:key="clientId"
            app:title="Device ID"
            app:useSimpleSummaryProvider="true" />

        <EditTextPreference
            app:key="user"
            app:title="User"
            app:useSimpleSummaryProvider="true" />

        <EditTextPreference
            app:key="change_password_key"
            app:title="Change Password"
            app:inputType="textPassword"
            app:persistent="true"
            app:useSimpleSummaryProvider="true" />

    </PreferenceCategory>

</PreferenceScreen>
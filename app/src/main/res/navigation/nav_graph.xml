<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    android:label="@string/app_name"
    app:startDestination="@id/directControl">

    <fragment
        android:id="@+id/directControl"
        android:name="de.drachenfels.gcontrl.DirectControlFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_direct_control" >
        <action
            android:id="@+id/action_directControl_to_settingsFragment"
            app:destination="@id/settingsFragment" />
    </fragment>
    <fragment
        android:id="@+id/settingsFragment"
        android:name="de.drachenfels.gcontrl.SettingsFragment"
        android:label="@string/title_activity_settings" >
        <action
            android:id="@+id/action_settingsFragment_to_directControl"
            app:destination="@id/directControl" />
    </fragment>
</navigation>